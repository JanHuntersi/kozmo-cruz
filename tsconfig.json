{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,  // Omogo훾i JavaScript datoteke
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",  // Omogo훾i uporabo @ kot root
    "paths": {
      "@/*": ["./*"],  // Omogo훾i uporabo @ za sklicevanje na root mapo
      "@components/*": ["app/components/*"],  // Dodaj pot za components mapo
      "@lib/*": ["app/lib/*"]  
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"  // Dodaj .js datoteke v vklju훾ene poti
  ],
  "exclude": [
    "node_modules"
  ]
}
